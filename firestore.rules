rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Allow the user to access documents in the "cities" collection
    // only if they are authenticated.
    
    match /{document=**} {
      allow read, write: if request.auth != null;
    }
    match /users/{user} {
      allow read, write: if request.auth != null;
    }
    // match /requests/{requests} {
    //   allow read, write: if request.auth != null;
    // }
    
    // tambahan baru lagi untuk path yang lebih spesifik
    match /requests/carbage/items/{itemId} {
      allow read, write: if request.auth != null;
      // allow read: if request.auth != null && request.auth.uid == resource.data.userId && resource.data.isDone == false;
      // allow write: if request.auth != null;
    }
    
    match /requests/report/items/{itemId} {
      allow read, write: if request.auth != null;
      // allow read: if request.auth != null && request.auth.uid == resource.data.userId && resource.data.isDone == false;
      // allow write: if request.auth != null;
    }
    
    match /confirmed_requests/{requestItem} {
      allow read, write: if request.auth != null;
    }
    
  }
}